{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"off",
			4
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"off",
			"double"
		],
		"semi": [
			"error",
			"never"
		],
		"no-console": [
			"off"
		],
		"no-unexpected-multiline": "error",
		"no-await-in-loop": "warning",
		"no-extra-parens": 1,
		"no-eval": "error"
	}
}